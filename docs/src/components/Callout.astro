---
import { Icon } from "astro-icon";

const styles = {
  note: {
    container: "bg-amber-50 dark:bg-slate-800/60 dark:ring-1 dark:ring-slate-300/10",
    title: "text-amber-900 dark:text-amber-400",
    body: "text-amber-800 [--tw-prose-background:theme(colors.amber.50)] prose-a:text-amber-900 prose-code:text-amber-900 dark:text-slate-300 dark:prose-code:text-slate-300",
  },
  warning: {
    container: "bg-amber-50 dark:bg-slate-800/60 dark:ring-1 dark:ring-slate-300/10",
    title: "text-amber-900 dark:text-amber-500",
    body: "text-amber-800 [--tw-prose-underline:theme(colors.amber.400)] [--tw-prose-background:theme(colors.amber.50)] prose-a:text-amber-900 prose-code:text-amber-900 dark:text-slate-300 dark:[--tw-prose-underline:theme(colors.amber.700)] dark:prose-code:text-slate-300",
  },
};

let { type = 'note', title = null} = Astro.props;
---

<div class={`my-8 flex rounded-3xl p-6 ${styles[type].container}`}>
  {type == 'note' && <Icon name="heroicons:light-bulb" class="h-8 w-8 flex-none" />}
  {type == 'warning' && <Icon name="heroicons:exclamation-circle" class="h-8 w-8 flex-none text-orange-500" />}
  <div class="ml-4 flex-auto">
    {title && <p class={`m-0 font-display text-xl mb-2.5 ${styles[type].title}`}>{title}</p>}
    <div class={`prose ${styles[type].body}`}><slot /></div>
  </div>
</div>