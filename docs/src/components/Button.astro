---
let { variant = 'primary', classes = '', href = null } = Astro.props;

const styles = {
  primary: "rounded-lg bg-primary-500 py-2 px-4 text-sm font-semibold text-gray-900 hover:bg-primary-200 focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-300/50 active:bg-primary-500",
  secondary: "rounded-lg bg-gray-800 py-2 px-4 text-sm font-bold text-white hover:bg-gray-700 focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white/50 active:text-gray-400",
};

classes = `${styles[variant]} ${classes}`;
---

{href ? (
  <a href={href} class={classes} {...Astro.props}>
      <slot />
    </a>
) : (
    <button class={classes} {...Astro.props}>
      <slot />
    </button>
)}
