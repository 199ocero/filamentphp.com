---
let { variant = 'primary', classes = '', href = null } = Astro.props;

const styles = {
  primary: "rounded-full bg-amber-500 py-2 px-4 text-sm font-semibold text-slate-900 hover:bg-amber-200 focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-300/50 active:bg-amber-500",
  secondary: "rounded-full bg-slate-800 py-2 px-4 text-sm font-bold text-white hover:bg-slate-700 focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white/50 active:text-slate-400",
};

classes = `${styles[variant]} ${classes}`;
---

{href ? (
  <a href={href} class={classes} {...Astro.props}>
      <slot />
    </a>
) : (
    <button class={classes} {...Astro.props}>
      <slot />
    </button>
)}
