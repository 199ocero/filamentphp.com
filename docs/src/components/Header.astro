---
import Logo from '@components/Logo.astro'
import MobileNavigation from '@components/MobileNavigation.astro'
import VersionSelector from '@components/VersionSelector.astro'
import ThemeSelector from '@components/ThemeSelector.astro'
import { Icon } from 'astro-icon'

let { navigation = null } = Astro.props
---

<header
  x-data="{ isScrolled: false }"
  x-on:scroll.window="isScrolled = window.scrollY > 0"
  x-init="isScrolled = window.scrollY > 0"
  class="sticky top-0 z-50 px-4 py-3 border-b dark:border-b-slate-800 transition duration-500 sm:px-6 lg:px-8 bg-cream dark:bg-gray-900/95"
>
  <div
    class="w-full max-w-7xl mx-auto flex flex-wrap gap-5 items-center justify-between"
  >
    <div class="relative flex flex-grow basis-0 items-center">
      <div class="mr-6 flex lg:hidden">
        <MobileNavigation navigation={navigation} />
      </div>
      <div class="flex gap-3 items-center">
        <a
          href="https://filamentphp.com"
          aria-label="Docs Home page"
          class="text-gray-900 dark:text-primary-500 transition duration-500 ease-out motion-reduce:transition-none hover:-translate-y-0.5"
        >
          <Logo
            className="hover:text-stone-800 transition motion-reduce:transition-none text-stone-900 dark:hover:text-butter dark:text-[#ffa434] md:block"
          />
        </a>
        <a
          href="/docs/"
          aria-label="Docs Home page"
          class="transition duration-500 ease-out motion-reduce:transition-none hover:-translate-y-0.5"
        >
          <div class="font-black text-butter dark:text-white text-xl pt-1">DOCS</div>
        </a>
      </div>
    </div>
    <div class="relative flex justify-end gap-4 items-center">
      <VersionSelector class="relative z-10" />
      <ThemeSelector class="relative z-10" />
      <a
        href="https://github.com/filamentphp/filament"
        class="group hidden sm:block"
        aria-label="GitHub"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon
          name="github"
          class="h-6 w-6 fill-gray-900 group-hover:fill-primary-600 dark:fill-gray-300 dark:group-hover:fill-primary-500"
        />
      </a>
      <div class="">
        <div id="docsearch"></div>
      </div>
    </div>
  </div>
</header>
