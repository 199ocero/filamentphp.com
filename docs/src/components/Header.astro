---
import Logo from '@components/Logo.astro'
import MobileNavigation from '@components/MobileNavigation.astro'
import VersionSelector from '@components/VersionSelector.astro'
import ThemeSelector from '@components/ThemeSelector.astro'
import { Icon } from 'astro-icon'

let { navigation = null } = Astro.props
---

<header
  x-data="{ isScrolled: false }"
  x-on:scroll.window="isScrolled = window.scrollY > 0"
  x-init="isScrolled = window.scrollY > 0"
  class="sticky top-0 z-50 px-4 py-5 shadow-md shadow-gray-900/5 transition duration-500 dark:shadow-none sm:px-6 lg:px-8 bg-cream dark:bg-gray-900/95"
>
  <div
    class="w-full max-w-7xl mx-auto flex flex-wrap gap-5 items-center justify-between"
  >
    <div class="relative flex flex-grow basis-0 items-center">
      <div class="mr-6 flex lg:hidden">
        <MobileNavigation navigation={navigation} />
      </div>
      <div class="flex gap-1.5 items-center">
        <a
          href="https://filamentphp.com"
          class="group sm:block"
          aria-label="Filamentphp Home Page"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="28"
            height="28"
            viewBox="0 0 24 24"
            class="text-hurricane/70 dark:text-dawn-pink/80 transition motion-reduce:transition-none hover:text-hurricane dark:hover:text-dawn-pink"
            ><g
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              ><path
                d="M10 18v-3a2 2 0 0 1 2-2v0a2 2 0 0 1 2 2v3M2 8l9.732-4.866a.6.6 0 0 1 .536 0L22 8"
              ></path><path d="M20 11v8a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2v-8"
              ></path></g
            ></svg
          >
        </a>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="28"
          height="28"
          viewBox="0 0 24 24"
          class="text-hurricane/20 dark:text-dawn-pink/20"
          ><path
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 5L7 19"
          ></path></svg
        >
        <a
          href="/docs/"
          aria-label="Docs Home page"
          class="text-gray-900 dark:text-primary-500 shrink-0"
        >
          <Logo
            className="text-stone-700 transition motion-reduce:transition-none hover:text-stone-900 dark:text-butter dark:hover:text-[#ffa434] md:block"
          />
        </a>
      </div>
    </div>
    <div class="-my-5 mr-4 md:mr-8">
      <div id="docsearch"></div>
    </div>
    <div class="relative flex basis-0 justify-end gap-4 md:flex-grow md:gap-8">
      <VersionSelector class="relative z-10" />
      <ThemeSelector class="relative z-10" />
      <a
        href="https://github.com/filamentphp/filament"
        class="group hidden sm:block"
        aria-label="GitHub"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon
          name="github"
          class="h-6 w-6 fill-gray-900 group-hover:fill-primary-600 dark:fill-gray-300 dark:group-hover:fill-primary-500"
        />
      </a>
    </div>
  </div>
</header>
