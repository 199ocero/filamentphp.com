---
import { Icon } from 'astro-icon';

const themes = [
  { name: "Light", value: "light", icon: 'heroicons:sun' },
  { name: "Dark", value: "dark", icon: 'heroicons:moon' },
  { name: "System", value: "system", icon: 'heroicons:computer-desktop' },
];
---

<div x-data="themeSelector">
  <p class="sr-only">Theme</p>
  <button
    type="button"
    class="flex h-6 w-6 items-center justify-center rounded-lg shadow-md shadow-black/5 ring-1 ring-black/5 dark:bg-slate-700 dark:ring-inset dark:ring-white/5"
    aria-label="Open navigation"
    x-on:click="$refs.panel.toggle"
  >
    <Icon name="heroicons:sun" class="hidden h-5 w-5 fill-amber-500 [[data-theme=light]_&]:block" />
    <Icon name="heroicons:moon" class="hidden h-4 w-4 fill-amber-500 [[data-theme=dark]_&]:block" />
    <Icon name="heroicons:sun" class="hidden h-5 w-5 fill-slate-400 [:not(.dark)[data-theme=system]_&]:block" />
    <Icon name="heroicons:moon" class="hidden h-4 w-4 fill-slate-400 [.dark[data-theme=system]_&]:block" />
  </button>
  <div
    x-ref="panel"
    class="absolute w-36 space-y-1 rounded-xl bg-white p-3 text-sm shadow-md shadow-black/5 ring-1 ring-black/5 dark:bg-slate-800 dark:ring-white/5"
    x-float.shift.offset.trap="{shift: {padding: 12}}"
    aria-label="Theme options"
  >
      {themes.map((theme) => (
        <button
          x-bind:key={theme.value}
          x-on:click={`updateTheme('${theme.value}'); $refs.panel.close();`}
          class="w-full flex cursor-pointer select-none items-center rounded-[0.625rem] p-1 hover:bg-gray-100 hover:dark:bg-slate-900/40 hover:dark:text-white"
          x-bind:class={`{
              'text-amber-500 hover:text-amber-500 hover:dark:text-amber-500': selected === '${theme.value}',
              'text-slate-700 dark:text-slate-300': selected !== '${theme.value}',
            }`}
        >
          <div class="rounded-md bg-white p-1 shadow ring-1 ring-slate-900/5 dark:bg-slate-700 dark:ring-inset dark:ring-white/5">
            <Icon name={theme.icon} class="h-4 w-4" x-bind:class={`selected == '${theme.value}' ? 'fill-amber-500 dark:fill-amber-500' : 'fill-slate-400'`} />
          </div>
          <div class="ml-3">{theme.name}</div>
        </button>
      ))}
  </div>
</div>
